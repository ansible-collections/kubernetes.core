---
apiVersion: v1
kind: Pod
metadata:
  name: '{{ pod_with_one_container.name }}'
spec:
  containers:
  - name: '{{ pod_with_one_container.container }}'
    image: busybox:latest
    command:
      - /bin/sh
      - -c
      - while true;do date;sleep 5; done
